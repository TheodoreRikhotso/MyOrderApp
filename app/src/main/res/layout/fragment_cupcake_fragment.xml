<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:id="@+id/pink"
    tools:context="com.example.admin.Oder_app.CupCakeFragment">


    <ListView
        android:id="@+id/gvList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"

        />

    <LinearLayout

        android:layout_width="match_parent"

        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="#F8F8FF"


        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:orientation="vertical"
        android:layout_weight="0.00">

        <TextView
            android:id="@+id/tvView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@android:color/holo_blue_light"
            android:text="Click here to view Totol Price &amp; total item"


            />

        <LinearLayout

            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvTotPrice"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Total R0"


                />

            <TextView
                android:id="@+id/tvTotQuantity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Total item"
               />

            <ImageView
                android:id="@+id/ivAddCart"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/cart" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
